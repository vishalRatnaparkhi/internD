<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="185dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9FA"
            android:foregroundTint="@color/colorPrimaryDark"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="354dp"
                android:layout_height="35dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"

                android:text="Vishwakarma Institute of Technology, Pune" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="208dp"
                android:layout_height="34dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="50dp"
                android:text="Electronics Department " />




            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="120dp"
                android:background="#AFD8E0"
                android:text=" Student Home Page "
                android:textColor="#0B0B0B" />

            <TextView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="170dp"
                android:layout_marginRight="50dp" />
            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="#448AFF"
                android:text="LogOut " />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="280dp"
                android:background="#AFD8E0"
                android:layout_marginRight="50dp"
                android:textColor="#0B0B0B"
                android:text="Company Details" />

            <TextView
                android:id="@+id/interd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="330dp"
                android:layout_marginRight="50dp" />

            <Button
                android:id="@+id/intern"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="440dp"
                android:text="Add/Edit Internship Details " />

            <Button
                android:id="@+id/mysubmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="440dp"
                android:text="View Submission" />

            <Button
                android:id="@+id/fnoti"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="520dp"
                android:layout_marginRight="30dp"
                android:text="Send Message to Faculty" />

            <Button
                android:id="@+id/anoti"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="520dp"
                android:text="Send Message to Admin" />


            <Button
                android:id="@+id/faculty"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="120dp"
                android:layout_marginTop="600dp"
                android:text="View Receiveds" />




            <TextView
                android:id="@+id/fac"
                android:layout_width="148dp"
                android:layout_height="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="650dp"
                android:background="#AFD8E0"
                android:visibility="gone"
                android:text="Received files"
                android:textColor="#0B0B0B" />



            <ListView
                android:id="@+id/listView1"
                android:layout_width="299dp"

                android:layout_height="700dp"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:layout_marginTop="680dp"
                android:layout_marginRight="50dp"/>





        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>