<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".faculty">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9FA"
            android:foregroundTint="@color/colorPrimaryDark"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="354dp"
                android:layout_height="35dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"

                android:text="Vishwakarma Institute of Technology, Pune" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="208dp"
                android:layout_height="34dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="50dp"
                android:text="Electronics Department " />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="80dp"
                android:text="Students Internship Data " />


            <TextView
                android:id="@+id/tv"
                android:layout_width="148dp"
                android:layout_height="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="120dp"
                android:background="#AFD8E0"
                android:text="Faculty Page "
                android:textColor="#0B0B0B" />

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="#448AFF"
                android:text="LogOut " />


            <EditText
                android:id="@+id/search_bar"
                android:layout_width="203dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="150dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="search by GR Number"
                android:ems="15"
                android:fadingEdge="horizontal"
                />

            <Button
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="140dp"

                android:text="search" />


            <TextView
                android:id="@+id/faculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="220dp"
                android:layout_marginRight="50dp"
                 />

            <Button
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="350dp"
                android:text="Add New User" />

            <Button
                android:id="@+id/students"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="350dp"
                android:text="Student List" />

            <Button
                android:id="@+id/submission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="410dp"
                android:text="Submissions" />



            <Button
                android:id="@+id/snoti"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="500dp"
                android:text="Student Notification " />


            <Button
                android:id="@+id/anoti"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="500dp"
                android:text="Messagae to Admin " />
            <ProgressBar
                android:id="@+id/pbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="310dp"
                android:visibility="invisible" />


            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="190dp"
                android:background="#FFF6F3F3"


                android:visibility="gone" />

            <Button
                android:id="@+id/faculty1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="120dp"
                android:layout_marginTop="600dp"
                android:text="View Receiveds" />




            <TextView
                android:id="@+id/fac"
                android:layout_width="148dp"
                android:layout_height="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="650dp"
                android:background="#AFD8E0"
                android:visibility="gone"
                android:text="Received files"
                android:textColor="#0B0B0B" />



            <ListView
                android:id="@+id/listView1"
                android:layout_width="299dp"

                android:layout_height="700dp"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:layout_marginTop="680dp"
                android:layout_marginRight="50dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />




        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
