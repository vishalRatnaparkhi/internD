<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intern">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/textView2"
                android:layout_width="354dp"
                android:layout_height="35dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"

                android:text="Vishwakarma Institute of Technology, Pune" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="208dp"
                android:layout_height="34dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="50dp"
                android:text="Electronics Department " />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="80dp"
                android:text="Students Internship Data " />



            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="#7C4DFF"
                android:layout_marginLeft="50dp"
                android:text="Add / Edit Company Details "
                android:layout_marginTop="150dp"
                android:textColor="#0B0B0B" />




            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="40dp"
                android:text="Company Name " />


            <EditText
                android:id="@+id/cname"
                android:layout_width="203dp"
                android:layout_height="38dp"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="180dp"
                android:ems="10"
                android:inputType="textEmailAddress" />


            <TextView
                android:id="@+id/textVie7"
                android:layout_width="97dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="260dp"
                android:text="Start Date" />



            <EditText
                android:id="@+id/sdate"
                android:layout_width="201dp"
                android:layout_height="39dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="250dp"
                android:ems="10"
                />


            <TextView
                android:id="@+id/textViw7"
                android:layout_width="97dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="310dp"
                android:text="End Date" />



            <EditText
                android:id="@+id/edate"
                android:layout_width="201dp"
                android:layout_height="39dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="300dp"
                android:ems="10"
                />

            <TextView
                android:id="@+id/tetView7"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="430dp"
                android:text="Company Address " />

            <EditText
                android:id="@+id/caddress"
                android:layout_width="201dp"
                android:layout_height="39dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="420dp"
                android:ems="100"
                />

            <TextView
                android:id="@+id/txtView7"
                android:layout_width="97dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="370dp"
                android:text="Advisor" />



            <EditText
                android:id="@+id/advisor"
                android:layout_width="201dp"
                android:layout_height="39dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="360dp"
                android:ems="10"
                />


            <TextView
                android:id="@+id/texView7"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="490dp"
                android:text="Internship Profile" />



            <EditText
                android:id="@+id/iprofile"
                android:layout_width="201dp"
                android:layout_height="39dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="480dp"

                android:ems="10"
                />





            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="170dp"
                android:text="Add Details" />






        </RelativeLayout>
    </ScrollView>

</RelativeLayout>







